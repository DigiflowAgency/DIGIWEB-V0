# ============================================
# PRE-PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copier ce fichier vers .env sur le serveur de PRE-PROD
# et remplir avec les valeurs de test

# Base de données MySQL Pre-production
DATABASE_URL="mysql://digiweb_user:STRONG_PASSWORD_HERE@localhost:3306/digiweb_erp_preprod"

# NextAuth.js Pre-production
NEXTAUTH_URL="https://preprod.votre-domaine.com"
NEXTAUTH_SECRET="GENERER_UN_SECRET_FORT_MINIMUM_32_CARACTERES_ALEATOIRES"
# Générer avec: openssl rand -base64 32

# APIs Externes PRE-PROD (utiliser les clés de test/sandbox)
PAPPERS_API_KEY="votre_cle_api_pappers_test"
COFACE_API_KEY="votre_cle_api_coface_test"
AIRCALL_API_KEY="votre_cle_api_aircall_test"
YOUSIGN_API_KEY="votre_cle_api_yousign_test"

# SMTP Pre-production (peut être le même que prod ou un service de test)
SMTP_HOST="smtp.votre-domaine.com"
SMTP_PORT="587"
SMTP_USER="preprod@votre-domaine.com"
SMTP_PASS="votre_password_smtp_test"

# Node Environment
NODE_ENV="production"
