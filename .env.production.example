# ============================================
# PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copier ce fichier vers .env sur le serveur de PRODUCTION
# et remplir avec les vraies valeurs

# Base de données MySQL Production
DATABASE_URL="mysql://digiweb_user:STRONG_PASSWORD_HERE@localhost:3306/digiweb_erp_prod"

# NextAuth.js Production
NEXTAUTH_URL="https://votre-domaine.com"
NEXTAUTH_SECRET="GENERER_UN_SECRET_FORT_MINIMUM_32_CARACTERES_ALEATOIRES"
# Générer avec: openssl rand -base64 32

# APIs Externes PRODUCTION
PAPPERS_API_KEY="votre_cle_api_pappers_prod"
COFACE_API_KEY="votre_cle_api_coface_prod"
AIRCALL_API_KEY="votre_cle_api_aircall_prod"
YOUSIGN_API_KEY="votre_cle_api_yousign_prod"

# SMTP Production (pour les emails)
SMTP_HOST="smtp.votre-domaine.com"
SMTP_PORT="587"
SMTP_USER="noreply@votre-domaine.com"
SMTP_PASS="votre_password_smtp"

# Node Environment
NODE_ENV="production"
